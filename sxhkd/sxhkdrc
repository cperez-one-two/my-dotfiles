#
# wm independent hotkeys
#

# terminal emulator
mod4 + Return
	$TERMINAL

# program launcher
mod4 + @space
	dmenu_run

# make sxhkd reload its configuration files:
mod4 + Escape
	pkill -USR1 -x sxhkd

# Volume controls
mod4 + shift {equal, minus, p}
	pactl set-sink-{volume 0 +10%,volume 0 -10%,mute 0 toggle}
{XF86AudioRaiseVolume, XF86AudioLowerVolume, XF86AudioMute}
	pactl set-sink-{volume 0 +10%,volume 0 -10%,mute 0 toggle}

# Brightness controls (~/.local/bin/brightness)
XF86MonBrightnessUp
    brightness up

XF86MonBrightnessDown
    brightness down

# programs
mod4 + shift + i
	$BROWSER
mod4 + shift + t
	telegram-desktop

#
# bspwm
#
# quit/restart bspwm
mod4 + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
mod4 + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
mod4 + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
mod4 + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
mod4 + g
	bspc node -s biggest.local --follow

#
# state/flags
#

# set the window state
mod4 + {t,shift + s,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
mod4 + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
mod4 + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
mod4 + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
mod4 + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
mod4 + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node
mod4 + grave
	bspc node -f last

# cycle desktops
mod4 + {_,shift + }Tab
	bspc desktop -f {prev.occupied,next.occupied}

# focus the older or newer node in the focus history
mod4 + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
mod4 + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
mod4 + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
mod4 + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
mod4 + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
mod4 + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
mod4 + alt + {h,j,k,l}
	bspc node -z {left -60 0,bottom 0 60,top 0 -60,right 60 0}

# contract a window by moving one of its side inward
mod4 + alt + shift + {h,j,k,l}
	bspc node -z {right -60 0,top 0 60,bottom 0 -60,left 60 0}

# move a floating window
mod4 + {Left,Down,Up,Right}
	bspc node -v {-60 0,0 60,0 -60,60 0}

# equalize
mod4 + shift + b
	bspc node @/ -E
